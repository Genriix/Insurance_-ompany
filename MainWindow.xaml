<Window x:Class="Insurance_сompany.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Insurance_сompany"
        mc:Ignorable="d"
        Title="Insurance Company" Height="600" Width="1000" Icon="{StaticResource AppIcon}" MinWidth="400" MinHeight="300"
        >
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="46"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#FF239039"/>
        <TextBlock Text="InsuranceCompany" FontSize="24" Margin="13,0,0,0" Foreground="White" FontFamily="Bahnschrift SemiBold Condensed" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button Content="Выйти" Name="BtnExit" Background="White" FontFamily="Cascadia Code SemiBold" FontSize="16" Foreground="#FF5A5A5A" Click="BtnExit_Click" HorizontalAlignment="Right" Margin="0,0,10,0"/>
        <Frame NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered" Grid.Row="1" Name="MainFrame"/>
    </Grid>
</Window>
